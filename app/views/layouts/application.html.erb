	<%= canonical_link_tag %>
	<meta name="author" content="Travis Berry">
	<!-- Mobile viewport optimized: j.mp/bplateviewport -->
	<meta name="apple-mobile-web-app-capable" content="yes">
	<meta name="viewport" content="width=device-width, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
	
	<%= stylesheet_link_tag "application" %>
	<link href='https://fonts.googleapis.com/css?family=Cabin:700|Maven+Pro' rel='stylesheet' type='text/css'>

	<style>
	html, p, body{
		font-family: 'Maven Pro', sans-serif !important;
	}
	h1,h2,h3,h4,h5,h6{
		font-weight:700;
		font-family: 'Cabin', sans-serif !important;
	}
	p{
		font-size:14px;
		line-height:1.45em;
		font-weight:400;
	}
	.otherAnimalInfo p{
		font-size:14px;
		line-height:1em !important;
	}
	</style>
	<%= yield :head %>
	<%= csrf_meta_tag %>
  <%= meta_description("")%>
  <%= meta_keywords("")%>
  <%= head_title("Hospitium")%>

	<!-- Le fav and touch icons -->
	<link rel="shortcut icon" href="https://d4uktpxr9m70.cloudfront.net/icons/favicon.ico">
	<link rel="apple-touch-icon" sizes="57x57" href="https://d4uktpxr9m70.cloudfront.net/icons/hospitium_57.jpg">
	<link rel="apple-touch-icon" sizes="72x72" href="https://d4uktpxr9m70.cloudfront.net/icons/hospitium_72.jpg">
	<link rel="apple-touch-icon" sizes="114x114" href="https://d4uktpxr9m70.cloudfront.net/icons/hospitium_114.jpg">
</head>
<body>
	<noscript>
			For full functionality of this site it is necessary to enable JavaScript.<br />
			Here are the <a href="http://www.enable-javascript.com/" target="_blank">
			instructions how to enable JavaScript in your web browser</a>.
	</noscript>

	
