<div class="row-fluid">
	<div class="span12">
		<% if notice.blank? %>

		<% else %>
			<div class="alert alert-info"><a class="close" data-dismiss="alert" href="#">&times;</a> <%= notice %></div>
		<% end %>
		<div class="well">
			<div class="row-fluid">
				<div class="span6">
					<a class="btn" href="/admin/posts/new"><i class="icon-plus"></i>Add New Post</a>
				</div>
				<div class="span1"> &nbsp; </div>
				<div class="span5 pull-right">
				
				</div>
				<!-- <form class="form-search">
				  <input type="text" class="input-medium search-query">
				  <button type="submit" class="btn">Search</button>
				</form> -->
			</div>
		</div>
		<table class="table table-striped table-bordered">
			<col><col><col><col><col><col><col><col>
			<thead>
				<tr>
					<th>Author</th>
					<th>Title</th>
					<th>Content</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @posts.each do |post| %>
					<tr>
						<td><%= post.author %></td>
						<td><%= post.title %></td>
						<td><%= markdown(truncate(post.content, :length => 140)) %> </td>
						<td>
							<div class="btn-group">
								<a class="btn tooltip-class" href="/admin/posts/<%= post.id %>" rel="tooltip" title="View Contact"><i class="icon-eye-open"></i></a>
								<a class="btn tooltip-class" href="/admin/posts/<%= post.id %>/edit" rel="tooltip" title="Edit Contact"><i class="icon-pencil"></i></a>
								<% if can? :manage, post %>
									<%= link_to raw("<i class='icon-remove'></i>"), admin_post_path(post),
									            :confirm => 'Are you sure you want to delete?', :method => :delete, :class => "btn tooltip-class", :rel => "tooltip", :title => "Delete" %>
								<% end %>
							</div>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>


