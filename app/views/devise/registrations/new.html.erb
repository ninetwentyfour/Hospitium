<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "form-stacked"}) do |f| %>
  <%= devise_error_messages! %>

  <div class="clearfix"><%= f.label :organization_name %>
  <%= f.text_field :organization_name %></div>

  <div class="clearfix"><%= f.label :username %>
  <%= f.text_field :username %></div>

	<div class="clearfix"><%= f.label :email %>
  <%= f.email_field :email %></div>

  <div class="clearfix"><%= f.label :password %>
  <%= f.password_field :password %></div>

  <div class="clearfix"><%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %></div>
  <input type="hidden" value="1" name="user[owner]" id="new_user_admin">
	<br />
  <div><%= f.submit "Sign up", :class => "btn btn-primary btn-large" %></div>
<% end %>
<!-- <hr /> -->


<br /><br />


<p>By signing up you agree to our <a class="js-pjax" href="/privacy-and-terms-of-service">privacy policy & terms of service</a>.</p>
<p> <a href="https://hospitium.tenderapp.com/kb" target="blank">Click here</a> for help getting started.</p>
<p>Already have an account? <a class="js-pjax" href="/users/sign_in">Sign In Here</a>.</p>

</div>
<% set_head_title("Sign Up") %>
<% content_for :title, "Sign Up - Hospitium" %>
<title><%= yield (:title) %></title>

